<%= simple_form_for :search,
    url: cocktails_path,
    method: 'GET',
    html: {
      id: 'search-form',
      class: '' } do %>
  <%= text_field_tag :search,
        params[:search],
        placeholder: "SEARCH FUNCTIONALITY COMING SOON..." %>
  <%= submit_tag "SEARCH",
        name: nil,
        disabled: true %>
<% end %>
