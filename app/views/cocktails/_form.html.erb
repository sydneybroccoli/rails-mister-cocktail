<%= javascript_include_tag('') %>

<%= simple_form_for @cocktail do |f| %>
  <%= f.input :name %>
  <%= f.input :thumbnail_url,
    label: 'Thumbnail URL' %>
  <%= f.input :category,
    collection: ['Shot', 'Cocktail', 'Other'] %>
  <%= f.input :alcoholic,
    collection: ['Alcoholic', 'Non-Alcoholic'] %>
  <%= f.input :glass %>
  <%= f.input :instructions,
    as: :text %>
  <%= f.submit %>
<% end %>

