<section class="cocktails-grid">
  <div class="nav-header">
    <%= render partial: 'shared/navbar', layout: 'layouts/banner' %>
  </div>

  <div class="create-cocktail">
    <%= link_to 'CREATE NEW COCKTAIL', new_cocktail_path,
      class: 'btn btn-main btn-lg' %>
  </div>

  <br>
  <div class="featured-cocktail">
    <%= render 'featured', featured: @cocktails.sample %>
  </div>
  <br>

  <br>
  <div class="cocktails-paginate">
    <%= paginate @cocktails, remote: false %>
  </div>
  <br>

  <div class="cocktails-container">
    <%= render 'cocktails' %>
  </div>

  <div class="nav-footer">
    <%= render partial: 'shared/footer', layout: 'layouts/banner' %>
  </div>
</section>
